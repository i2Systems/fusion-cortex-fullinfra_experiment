# ============================================
# Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your values
#
# Quick Start:
#   For local Docker:  npm run dev:local (uses .env.local.template)
#   For cloud Supabase: npm run dev:cloud (uses .env.cloud)
#
# See LOCAL_DB_SETUP.md for Docker setup
# See SUPABASE_SETUP.md for cloud setup
# ============================================

# --------------------------------------------
# Database
# --------------------------------------------
# Local Docker (default for development):
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/fusion_cortex"

# Cloud Supabase (use connection pooler for Vercel!):
# DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres"

# Indicator for UI (shows which DB is active in Settings → Data)
NEXT_PUBLIC_DB_ENV="local"  # "local" or "cloud"

# --------------------------------------------
# NextAuth
# --------------------------------------------
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET="development-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"
# For production, set in Vercel:
# NEXTAUTH_URL="https://your-app.vercel.app"

# --------------------------------------------
# Supabase Storage (for image hosting)
# --------------------------------------------
# Get from Supabase Dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL="https://xxxxx.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# --------------------------------------------
# Optional
# --------------------------------------------
# Migration secret (for protected endpoints)
# MIGRATION_SECRET="your-migration-secret"
